@model Hairstudio_MVC.Models.VIewModel_CreateAppointment

@{
    ViewBag.Title = "Edit";
}
@{
    var hairdresserDropDown = new List<SelectListItem>();
    foreach (var item in Model.Hairdressers)
    {
        var selectListItem = new SelectListItem
        {
            Text = item.Name,
            Value = item.ID.ToString(),
            Selected = item.ID == Model.Appointment.Hairdresser.ID
        };
        hairdresserDropDown.Add(selectListItem);
    }
}
@{
    var customerDropDown = new List<SelectListItem>();
    foreach (var item in Model.Customers)
    {
        var selectListItem = new SelectListItem
        {
            Text = item.Name,
            Value = item.ID.ToString(),
            Selected = item.ID == Model.Appointment.Customer.ID
        };
        customerDropDown.Add(selectListItem);
    }
}
<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Frisørtid</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Appointment.ID)

        @*//*@
        <div class="form-group">
            @Html.LabelFor(model => model.Appointment.TimeRange.TheDate.Date, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Appointment.TimeRange.TheDate, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Appointment.TimeRange.TheDate, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Appointment.TimeRange.StartTime, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Appointment.TimeRange.StartTime, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Appointment.TimeRange.StartTime, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Appointment.TimeRange.EndTime, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Appointment.TimeRange.EndTime, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Appointment.TimeRange.EndTime, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Appointment.Hairdresser, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBoxFor(model => model.selectedHairdresserID, hairdresserDropDown, new { @class = "ui-selecting" })
                @Html.ValidationMessageFor(model => model.Appointment.Hairdresser, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Appointment.Customer, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBoxFor(model => model.selectedCustomerID, customerDropDown, new { @class = "ui-selecting" })
                @Html.ValidationMessageFor(model => model.Appointment.Customer, "", new { @class = "text-danger" })
            </div>
        </div>
        @*//*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tilbage til oversigten", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
